<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="frameStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/frame_padding</item>
    </style>

    <style name="cardLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="gameButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/game_button_shape</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
