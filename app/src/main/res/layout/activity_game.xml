<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tens"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/face_number_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ten"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/ten_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ten_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/ten_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ten_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jacks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/current_level_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/jack"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/jack_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/jack_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/jack_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/jack_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/queens"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/locked_level_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/queen"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/queen_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/queen_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/queen_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/queen_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/locked_level_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/king"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/king_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/king_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/king_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/king_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/locked_level_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ace"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/ace_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ace_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/ace_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ace_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewPile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pile"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/pile_clubs"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pile_diamonds"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/pile_spades"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pile_hearts"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp">
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/discard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDiscard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/discard"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/discardFrame"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/c"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/clubsText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_8"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/d"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/diamondsText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_8"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/s"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/spadesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_8"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/h"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/heartsText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_8"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/blackFrame"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">
            </FrameLayout>

            <TextView
                android:id="@+id/blackDiscardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="@string/press_to_discard"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="13sp"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/red"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/redFrame"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">
            </FrameLayout>

            <TextView
                android:id="@+id/redDiscardText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:text="@string/press_to_discard"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="13sp"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/deck"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/deckFrame"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <ImageView
                    android:id="@+id/topCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card_back"
                    android:contentDescription="@string/top_card_access"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/deckDiscardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/press_to_draw"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="13sp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/cardsLeftText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/_52"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/score"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/scoreColon"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_0"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/pileColon"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pileText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/_0"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/level"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/jack"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/breakButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/breakString"
                android:textSize="13sp"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_row_shape"
            android:orientation="vertical" >
            <Button
                android:id="@+id/newGameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_game"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/toPlayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_play"
                android:textSize="15sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>