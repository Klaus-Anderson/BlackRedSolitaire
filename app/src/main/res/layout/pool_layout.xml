<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/face_number_shape"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            tools:ignore="ObsoleteLayoutParam">

        <TextView
                android:id="@+id/pool_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                android:text="@string/ten"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:textSize="17sp"/>

        <FrameLayout
                android:id="@+id/pool_clubs"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="3dp"
                app:layout_constraintBottom_toTopOf="@id/pool_spades"
                app:layout_constraintTop_toBottomOf="@id/pool_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pool_diamonds"
        />

        <FrameLayout
                android:id="@+id/pool_diamonds"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="3dp"
                app:layout_constraintBottom_toTopOf="@id/pool_hearts"
                app:layout_constraintTop_toBottomOf="@id/pool_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pool_clubs"/>

        <FrameLayout
                android:id="@+id/pool_spades"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="3dp"
                app:layout_constraintTop_toBottomOf="@id/pool_clubs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pool_hearts"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <FrameLayout
                android:id="@+id/pool_hearts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingVertical="3dp"
                app:layout_constraintTop_toBottomOf="@id/pool_diamonds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pool_spades"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>